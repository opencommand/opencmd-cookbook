{{define "head"}}{{end}}
{{define "header"}}{{end}}
{{define "menu"}}{{end}}
{{define "title"}} - {{.Synopsis}} 命令解释{{end}}
{{define "content"}}
        <div class="command">
            {{.Synopsis}}
        </div>
    <style>
        .help-text {
            margin: 20px 0;
            padding: 15px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .help-text pre {
            margin: 0;
            padding: 0;
            background: none;
            border: none;
        }
        .help-text .option {
            color: #0088cc;
            font-weight: bold;
        }
        .help-text .description {
            margin-left: 20px;
        }
        .option-box {
            margin: 10px 0;
            padding: 15px;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .option-box .option {
            color: #0088cc;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .option-box .description {
            margin-left: 20px;
            white-space: pre-wrap;
        }
    </style>
    
        <div class="help-text">
            <pre>{{.Description}}</pre>
        </div>

        {{range .HelpText}}
        <div class="option-box">
            <div class="option">{{.Option}}</div>
            <div class="description">{{.Description}}</div>
        </div>
        {{end}}
{{end}}
